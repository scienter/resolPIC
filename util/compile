mpicc -o hdf_particle -I/usr/lib/x86_64-linux-gnu/hdf5/openmpi/include -L/usr/lib/x86_64-linux-gnu/hdf5/openmpi hdf_particle.c -lm -lhdf5
echo 'hdf_particle is made.'

mpicc -o centerField -I/usr/lib/x86_64-linux-gnu/hdf5/openmpi/include -L/usr/lib/x86_64-linux-gnu/hdf5/openmpi centerField.c -lm -lhdf5
echo 'centerField is made.'

mpicc -o particle -I/usr/lib/x86_64-linux-gnu/hdf5/openmpi/include -L/usr/lib/x86_64-linux-gnu/hdf5/openmpi particle.c -lm -lhdf5
echo 'particle is made.'

mpicc -o resolField -I/usr/lib/x86_64-linux-gnu/hdf5/openmpi/include -L/usr/lib/x86_64-linux-gnu/hdf5/openmpi resolField.c -lm -lhdf5
echo 'resolField is made.'
